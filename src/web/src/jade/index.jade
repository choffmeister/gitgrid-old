doctype 5
html
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
        title assert:hub
        link(rel="stylesheet", href="/css/main.css")
        script(data-main="/js/app", src="/bower_components/requirejs/require.js", async)
    body
        div#wrap
            header.clearfix
                div.container
                    include partials/header
            div.clearfix
                section#content.container
                    div
        footer.clearfix
            div.container
                include partials/footer
        div#dialogs
        div#notifications.cloak
            include partials/notifications
        div#busy.active(data-bind="css: { active: busy }")
        div#shadow
