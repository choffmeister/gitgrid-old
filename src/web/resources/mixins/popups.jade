mixin dialog-form(title, submitlabel, submitbinding)
    .modal.fade(tabindex="-1", role="dialog", aria-hidden="true")
        form(autocomplete="off", data-bind="submit: #{submitbinding}")
            .modal-dialog
                .modal-content
                    .modal-header
                        button.close(type="button", aria-hidden="true", data-bind="click: cancel", data-dismiss="modal") &times;
                        h4.modal-title= title
                    .modal-body
                        block
                    .modal-footer
                        button.btn.btn-primary(type="submit", data-bind="click: #{submitbinding}")= submitlabel
                        button.btn.btn-default(type="button", data-dismiss="modal") Cancel

mixin dialog-notification(text)
    .modal.fade(tabindex="-1", role="dialog", aria-hidden="true")
        .modal-dialog
            .modal-content
                .modal-body
                    button.close(type="button", aria-hidden="true", data-dismiss="modal") &times;
                    div(style="margin-right: 30px;")= text
