include ../mixins/popups
include ../mixins/inputelements

+dialog-form("Login", "Login", "login")
    +input-text("userName", "User name", "Your user name")(data-bind="value: userName, disable: busy, hasFocus: focus() == 'userName'")
    +input-password("password", "Password", "Your password")(data-bind="value: password, disable: busy, hasFocus: focus() == 'password'")
